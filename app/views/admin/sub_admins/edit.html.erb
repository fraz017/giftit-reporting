<div class="container py-5">

  <div class="row justify-content-sm-center py-5">
    <div class="col-sm-6">
      <div class="card">
        <div class="card-header text-center">
          <h4 class="title">Change Password</h4>
        </div>
        <%= form_for(@user, :url => { :action => "update_password" } ) do |f| %>
          <div class="card-body">
            <div class="row">
              <div class="col-lg-12 col-sm-12">
                <div class="form-group">
                  <% if @user.errors.any? %>
                    <ul>
                      <% @user.errors.full_messages.each do |msg| %>
                        <li><%= msg %></li>
                      <% end %>
                    </ul>
                  <% end %>
                </div>
              </div>
            </div>
            <div class="row">  
              <div class="col-lg-12 col-sm-12">
                <div class="form-group">
                  <label>New Password</label>
                  <%= f.password_field :password, placeholder: "New Password", class: "form-control", :autocomplete => "off" %>
                </div>
              </div>
            </div>  
            <div class="row">  
              <div class="col-lg-12 col-sm-12">
                <div class="form-group">
                  <label>Password Confirmation</label>
                  <%= f.password_field :password_confirmation, placeholder: "Password Confirmation", class: "form-control", :autocomplete => "off" %>
                </div>
              </div>
            </div>
          </div>
          <div class="card-footer">
            <div>
              <div class="col-lg-6 col-sm-12 offset-lg-3">
                <%= f.submit "Update Password", class: "btn btn-fill btn-primary" %>  
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>        