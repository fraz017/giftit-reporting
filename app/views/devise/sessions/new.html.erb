<div class="container py-5">

  <div class="row justify-content-sm-center py-5">
    <div class="col-sm-8">
      <div class="card">
        <div class="card-header text-center">
          <h4 class="title">Login</h4>
        </div>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="card-body">
            <div class="row">
              <div class="col-lg-6 col-sm-12 offset-lg-3">
                <div class="form-group">
                  <% flash.each do |key, value| %>
                    <div class="flash <%= key %> alert-primary">
                      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                      </button>
                      <%= value %>
                    </div>
                  <% end %>
                </div>
              </div>
              <div class="col-lg-6 col-sm-12 offset-lg-3">
                <div class="form-group">
                  <label>Email</label>
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "form-control" %>
                </div>
              </div>
              <div class="col-lg-6 col-sm-12 offset-lg-3">
                <div class="form-group">
                  <label for="exampleInputEmail1">Password</label>
                  <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "form-control" %>
                </div>
              </div>
              <div class="col-lg-6 col-sm-12 offset-lg-3">
                <div class="form-group">
                  <% if devise_mapping.rememberable? -%>
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me %>
                  <% end -%>
                </div>
              </div>
            </div>
          </div>
          <div class="card-footer">
            <div>
              <div class="col-lg-6 col-sm-12 offset-lg-3">
                <%= f.submit "Log in", class: "btn btn-fill btn-primary" %>  
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>


